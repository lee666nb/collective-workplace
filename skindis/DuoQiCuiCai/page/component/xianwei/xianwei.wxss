.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.upload-area {
  width: 300px;
  height: 300px;
  border: 2px dashed #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
  position: relative;
  background-color: #f9f9f9;
}

.plus-sign {
  font-size: 50px;
  color: #ccc;
}

.uploaded-image {
  max-width: 100%;
  max-height: 100%;
}
