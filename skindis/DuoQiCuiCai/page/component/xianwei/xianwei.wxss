.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 40rpx;
}

.upload-area {
    width: 500rpx;
    height: 500rpx;
    border: 4rpx dashed #ccc;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
    position: relative;
    background-color: #f9f9f9;
}

.plus-sign {
    font-size: 70rpx;
    color: #ccc;
}

.uploaded-image {
    max-width: 100%;
    max-height: 100%;
}

.result-display {
    position: fixed;
    bottom: 40rpx; /* 调整位置 */
    left: 20rpx;
    right: 20rpx;
    padding: 40rpx; /* 增加内边距，使框变大 */
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 20rpx; /* 增大圆角 */
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3); /* 增大阴影 */
    color: #fff;
    font-size: 36rpx; /* 增大字体大小 */
    text-align: center;
    z-index: 1000; /* 保证在最前面显示 */
}

.result-heading {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.disease-name {
    font-size: 34rpx;
    color: #ff6347;
    margin-bottom: 16rpx;
}

.treatment-advice {
    font-size: 28rpx;
    color: #555;
}

.accuracy-degree{
    color: violet;
}

.treatment-advice{
    color:yellow;
    padding-top: 10rpx;
}

