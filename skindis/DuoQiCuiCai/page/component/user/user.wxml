<view class="container">
 
 <view class="info-box">
   <view style="text-align: center;margin-bottom:10%;">
     <image class="avatar-img" src="/image/微信头像.png" />
   </view>
 
   <text>昵称： {{nickName}}</text>
   <text>性别： {{gender}}</text>
   <text>国家： {{country}}</text>
   <text>省份： {{province}}</text>
   <text>城市： {{city}}</text>
 </view>

 <view style="margin-top:5%"> 
   <button bindtap="updateMessageTap" type="primary">修改个人信息</button>
 </view>
 <view style="margin-top:5%"> 
   <button bindtap="logoutTap" type="warn">退出登录</button>
 </view>
 
</view>
