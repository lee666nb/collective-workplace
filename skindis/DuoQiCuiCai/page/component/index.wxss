/* 容器样式 */  
.container {  
  width: 90%;  
  max-width: 900px;  
  background-color: #FFFFFF;  
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);  
  border-radius: 15px;  
  padding: 30rpx; 
  overflow: hidden;  
  margin: 0 auto; /* 居中容器 */  
}  

/* 头部样式 */  
.header {  
  display: flex;  
  align-items: center;  
  margin-bottom: 20px;  
  padding-bottom: 20px;  
  border-bottom: 1px solid #E0E0E0;  
}  

.header image {  
  width: 50px;  
  height: 50px;  
  margin-right: 15px; /* 给标题留出空间 */  
}  

.title {  
  font-size: 36px;  
  font-weight: 700;  
  color: rgb(39, 38, 38);  
  margin-left: -23px;
  text-decoration: none;
  margin-top: 20px;
}  

/* 主内容区样式 */  
.main {  
  width: 100%;  
}  

.welcome {  
  text-align: center;  
  margin-bottom: 30px;  
}  

.welcome-text {  
  font-size: 24px;  
  font-weight: 700;  
  margin-bottom: 10rpx;  
  color: #4A4A4A;  
}  

.description {  
  font-size: 16px;  
  color: #999999;  
}  

/* 功能卡片样式 */  
.feature-cards {  
  display: flex;  
  justify-content: space-around;  
  flex-wrap: wrap;  
}  

.card {  
  display: flex;  
  flex-direction: column;  
  align-items: center;  
  background-color: #FFFFFF;  
  border-radius: 10px;  
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);  
  padding: 20px;  
  width: 45%;  
  max-width: 300px;  
  cursor: pointer;  
  transition: transform 0.3s, box-shadow 0.3s;  
  margin: 10px;  
}  

.card:active {  
  /* 替代:hover，因为微信小程序不支持:hover */  
  transform: translateY(-5px);  
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);  
}  

.card-title {  
  font-size: 20px;  
  font-weight: 700;  
  margin-bottom: 15rpx;  
  color: #4A4A4A;  
  text-align: center;
}  

.card-description {  
  font-size: 14px;  
  color: #999999;  
  text-align: center;  
}  

/* 底部样式 */  
.footer {  
  margin-top: 20px;  
  text-align: center;  
  padding-top: 10px;  
  border-top: 1px solid #E0E0E0;  
}  

.footer-text {  
  font-size: 14px;  
  color: #999999;  
}  
