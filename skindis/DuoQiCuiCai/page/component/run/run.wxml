<view class="container">
    <!-- 图片滑动窗口 -->
    <swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000" circular="true">
        <block wx:for="{{imageList}}" wx:key="*this">
            <swiper-item>
              <image src="{{item}}" class="slide-image"></image>
            </swiper-item>
        </block>
    </swiper>

    <!-- 搜索框 -->
    <view class="search-box">
        <input class="search-input" placeholder="请输入皮肤病名称" bindinput="onSearchInput"/>
        <button class="search-button" bindtap="onSearch">搜索</button>
    </view>

    <!-- 文本展示区域 -->
    <view class="text-content">
        <block wx:if="{{selectedDisease}}">
            <view class="card">
                <image src="{{selectedDisease.image}}" class="card-image"></image>
                <view class="card-text">
                    <view class="heading">{{selectedDisease.name}}</view>
                    <view>{{selectedDisease.description}}</view>
                </view>
            </view>

            <view class="card" wx:for="{{selectedDisease.treatments}}" wx:key="*this">
                <view class="card-text">
                    <view class="subheading">{{item.type}}</view>
                    <view>{{item.details}}</view>
                </view>
            </view>
        </block>

        <block wx:else>
            <view>请输入皮肤病名称进行搜索。</view>
        </block>
    </view>
</view>
