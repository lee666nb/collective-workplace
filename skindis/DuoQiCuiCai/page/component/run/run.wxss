.container {
    display: flex;
    flex-direction: column;
  }
  
  .swiper {
    width: 100%;
    height: 200px;
  }
  
  .slide-image {
    width: 100%;
    height: 100%;
  }
  
  .text-content {
    padding: 16px;
  }
  
  .search-box {
    display: flex;
    margin: 20px 0;
  }
  
  .search-input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-top: 5rpx;
    margin-left: 20rpx;
  }
  
  .search-button {
    padding: 1rpx 15px;
    margin-left: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 1rpx;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
  
  .fixed-box {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    padding: 16px;
    margin-bottom: 20px;
    border-radius: 8px;
    margin-top: 1rpx;
  }
  
  .fixed-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  
  .fixed-content {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #007BFF;
  }
  
  .description {
    font-size: 14px;
    margin-bottom: 10px;
    color: #666;
  }
  
  .treatment-item {
    margin-bottom: 10px;
  }
  
  .treatment-type {
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 4px;
    color: #007BFF;
  }
  
  .treatment-details {
    font-size: 14px;
    color: #333;
  }
  